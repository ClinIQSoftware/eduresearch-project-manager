# ===========================================
# EduResearch Project Manager - Backend Config
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database (Required)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eduresearch

# ===========================================
# Security (Required - Change in Production!)
# ===========================================
SECRET_KEY=change-this-to-a-secure-random-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Application URLs (Required for Production)
# ===========================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# ===========================================
# Google OAuth (Optional)
# ===========================================
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# Microsoft OAuth (Optional)
# ===========================================
# Get credentials at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# ===========================================
# Email / SMTP (Optional)
# ===========================================
# Gmail: Use App Passwords - https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=
FROM_NAME=EduResearch Project Manager

# ===========================================
# File Uploads
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# Multi-Tenancy (Required for Production)
# ===========================================
# Base domain for subdomain-based multi-tenancy
# e.g., "eduresearch.app" will create acme.eduresearch.app for enterprise "acme"
BASE_DOMAIN=localhost:3000

# ===========================================
# Platform Admin (Seeded on First Run)
# ===========================================
# Default platform administrator credentials
# IMPORTANT: Change these in production!
PLATFORM_ADMIN_EMAIL=platform-admin@eduresearch.app
PLATFORM_ADMIN_PASSWORD=PlatformAdmin123!
PLATFORM_ADMIN_NAME=Platform Administrator

# ===========================================
# Server Configuration (Production)
# ===========================================
# PORT=8000
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
# LOG_LEVEL=info
